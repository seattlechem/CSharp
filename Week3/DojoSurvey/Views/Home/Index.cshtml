<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Dojo Survey</title>
</head>
<body>
    <!-- your name, Dojo Location, Favorite Language, Comment (optional), sumit button -->
    @ViewBag.Errors
    <div id="Counter"># of times you have submitted this form: @ViewBag.Times time(s)</div>
    <div class="Main">
        <form action="formprocess" method="post">
            <label for="name">Your Name: </label>
            <input type="text" name="name" placeholder="Enter your name">
            <br>

            <label for="DojoLocation">Dojo Location: </label>
            <select name="DojoLocation">
                <option value="" disabled selected>Choose a dojo location</option>
                <option value="Seattle">Seattle</option>
                <option value="Los Angeles">Los Angeles</option>
                <option value="New York">New York</option>
                <option value="Washington D. C.">Washington D.C.</option>
                <option value="Chicago">Chicago</option>
            </select>
            <br>

            <label for="favoriteLanguage">Favorite Language: </label>
            <select name="favoriteLanguage">
                <option value="" disabled selected>Choose a favorite Language</option>
                <option value="Python">Python</option>
                <option value="Java">Java</option>
                <option value="C#">C#</option>
                <option value="Ruby">Ruby</option>
                <option value="HTML">HTML</option>
            </select>
            <br>

            <label for="comment">Comment (optional): </label><br>
            <textarea name="commentBox" cols="30" rows="10"></textarea>
            <br>

            <input type="submit" value="Submit">

        </form>
        
    </div>
    
</body>
</html>