@model AuctionApp.Models.newUser

<h2>Registration</h2>
<form asp-action="Create" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="first_name"></span>
        <label asp-for="first_name"></label>
        <input class="form-control" asp-for="first_name">
    </div>    

    <div class="form-group">
        <span asp-validation-for="last_name"></span>
        <label asp-for="last_name"></label>
        <input class="form-control" asp-for="last_name">
    </div>    

    <div class="form-group">
        <span asp-validation-for="userName"></span>
        <label asp-for="userName"></label>
        <input class="form-control" asp-for="userName">
    </div>    
    <div class="form-group">
        <span asp-validation-for="password"></span>
        <label asp-for="password"></label>
        <input class="form-control" asp-for="password">
    </div>    
    <div class="form-group">
        <span asp-validation-for="confirm"></span>
        <label asp-for="confirm"></label>
        <input class="form-control" asp-for="confirm">
    </div>    
    <div class="form-group">
    <input type="submit" value="Register">
    </div>
</form>